# Curator Pommeline Chatbot Environment Variables

# LLM API Keys (at least one should be configured)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Hugging Face API Key (for gated models)
HF_API_KEY=your_huggingface_api_key_here

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=curator-pommeline
PINECONE_DIMENSION=768
PINECONE_METRIC=cosine
PINECONE_CLOUD=aws
PINECONE_REGION=us-west-2

# Default LLM Model
# Options: "z-ai/glm-4.5-air", "z-ai/glm-4-32b", "gpt-4", "claude-3-sonnet"
DEFAULT_LLM_MODEL=glm-4.5-air

# Embedding Model Configuration
EMBEDDING_MODEL=google/embeddinggemma-300m #gated model, will need HF_API_KEY
EMBEDDING_DIMENSION=768

# Retrieval Configuration
MAX_RETRIEVED_DOCS=10
SIMILARITY_THRESHOLD=0.1

# Chunking Configuration
CHUNK_SIZE=300
CHUNK_OVERLAP=50

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Curator Pommeline Chatbot

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Cache Configuration
CACHE_TTL=1800
CACHE_MAX_SIZE=1000

# Vector Store Configuration
VECTOR_STORE_PATH=./data/vector_store

# Data Directories
DATA_DIR=./data
PROMPTS_DIR=./prompts